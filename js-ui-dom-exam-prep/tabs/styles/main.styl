*
    padding 0
    margin auto

body

    #root

        .tab-control-container
        
            #tabs-list
                list-style: none

                .tab
                    display: inline-block
                    padding 5px 10px
                    cursor: pointer

            #tabs-container

                .tab-content
                    display none
                    border 3px solid black
                    padding 10px
                    width 800px
                    height 1000px

                    .user-input
                        border 1px solid black
                        padding 25px 50px
                        box-shadow: 0px 0px 15px black 
                        width 630px
                        height 891px
                        margin auto          

                .visible
                    display block